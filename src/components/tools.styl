head-pad()
  padding 15px

textColor = hsl(203, 30%, 26%)

.icon
  width 5vw
  padding 15px
  box-sizing content-box

header
  background white
  position fixed
  top 0
  z-index 1
  width 100vw
  box-shadow 0px 0px 8px black

  & h1
    width 100%
    padding 7px 0
    display flex
    align-items center

    & .title
      head-pad()
      font-size 5vw
      flex-grow 2

  & > .sub
    color textColor
    font-size 1.1em
    display flex
    justify-content space-between
    padding 0px 10px

    & > div
      padding 5px 10px

      &.active
        border-bottom 2px solid textColor

.page > img
  position fixed
  z-index -2
  width 100vw
  height 100vh
  max-height 100vh
  transform scaleX(-1)

.page::before
  content ""
  background-image url("../assets/images/green-ocean.jpg")
  background-size cover
  background-attachment fixed
  position fixed
  z-index -2
  width 100vw
  height 100vh
  max-height 100vh
  transform scaleX(-1)

.popupPage
  position absolute
  top 0
  z-index 6
  min-width min(fit-content, 50vw)

  // width 90vw
  &::before
    content ""
    position absolute
    z-index 1
    top 0
    right 0
    width 100%
    height 100%
    background rgba(243, 255, 245, 0.74)
    backdrop-filter blur(4px)

  & > *
    position relative
    z-index 2
    width 100%

  & > ul
    height max(100%, 400px)
    display flex
    flex-direction column
    justify-content space-around
    font-size 1.1em
    padding 30px

    & > li
      width 100%
      padding 15px 0

.paper
  position relative
  head-pad()
  color textColor
  margin-top 2em

  & h2
    margin-bottom 15px
    display flex
    justify-content space-between

    & div
      font-size 0.7em
      align-self end

  & .content
    position relative
    head-pad()
    background rgba(255, 255, 255, 0.85)
    box-shadow -4px 8px 12px 4px rgba(0, 0, 0, 0.25)