inputColor = #00C7D5

.message-list
  position relative
  padding 1em 1em 3em

  .add-btn
    position absolute
    left 1em
    bottom 0
    transform translateY(20%)
    width 1.3em
    height 1.3em
    font-size 2.5em

  li
    position relative

  textarea
    margin-top 2em
    width 100%
    height 3em
    border-top 0
    border-color inputColor
    padding 0.5em

  .icon
    position absolute
    top 0
    left 1em